<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1103171246_1" author="solncev">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(255)"/>
            <column name="password" type="varchar(255)"/>
            <column name="sex" type="varchar(6)"/>
        </createTable>
    </changeSet>

    <changeSet id="1103171246_2" author="solncev">
        <addUniqueConstraint tableName="users" columnNames="email"/>
    </changeSet>

    <changeSet id="1103171246_3" author="solncev">
        <createTable tableName="posts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(255)"/>
            <column name="date" type="varchar(255)"/>
            <column name="author_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="1103171246_4" author="solncev">
        <addForeignKeyConstraint baseTableName="posts"
                                 baseColumnNames="author_id"
                                 constraintName="posts_author_id_users_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1103171246_5" author="solncev">
        <addColumn tableName="posts">
            <column name="receiver_id" type="bigint"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="posts"
                                 baseColumnNames="receiver_id"
                                 constraintName="posts_receiver_id_users_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="1103171246_6" author="solncev">
        <createTable tableName="messages">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="varchar(255)"/>
            <column name="date" type="varchar(255)"/>
            <column name="sender_id" type="bigint"/>
            <column name="recipient_id" type="bigint"/>
        </createTable>
    </changeSet>

    <changeSet id="1103171246_7" author="solncev">
        <addForeignKeyConstraint baseTableName="messages"
                                 baseColumnNames="sender_id"
                                 constraintName="messages_sender_id_users_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="messages"
                                 baseColumnNames="recipient_id"
                                 constraintName="messages_recipient_id_users_id_fk"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>
    </changeSet>


</databaseChangeLog>
